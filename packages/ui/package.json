{
  "name": "@browser-extensions/ui",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/styles.css",
    "./theme.css": "./src/theme.css",
    "./card": "./src/card.tsx",
    "./card/*": "./src/card/*",
    "./logo": "./src/logo.tsx",
    "./logo/*": "./src/logo/*",
    "./button": "./src/button.tsx",
    "./button/*": "./src/button/*",
    "./title": "./src/title.tsx",
    "./title/*": "./src/title/*"
  },
  "scripts": {
    "build": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "lint": "eslint src/",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch"
  },
  "packageManager": "pnpm@10.7.1",
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@browser-extensions/eslint-config": "workspace:*",
    "@browser-extensions/typescript-config": "workspace:*",
    "@browser-extensions/utils": "workspace:*",
    "@turbo/gen": "^2.4.4",
    "@types/node": "^20.17.30",
    "@types/react": "^19.1.2",
    "typescript": "^5"
  },
  "dependencies": {
    "@browser-extensions/design-system": "workspace:*",
    "@tailwindcss/cli": "^4.1.4",
    "@tailwindcss/postcss": "^4.1.4",
    "class-variance-authority": "^0.7.1",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.4"
  }
}
